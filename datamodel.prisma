type User {
  id: ID! @id
  userName: String! @unique
  firstName: String! @unique
  lastName: String! @default(value: "")
  bio: String
  followings: [User!]! @relation(name: "FollowingsRelation")
  followers: [User!]! @relation(name: "FollowersRelation")
  posts: [Post!]!
  likes: [Like!]!
  comments: [Comment!]!
  chatRooms: [ChatRoom!]!
}

type Post {
  id: ID! @id
  location: String
  caption: String!
  user: User!
  files: [File!]!
  likes: [Like!]!
  Comments: [Comment!]!
}

type Like {
  id: ID! @id
  user: User!
  post: Post!
}

type Comment {
  id: ID! @id
  text: String!
  user: User!
  post: Post!
}

type File {
  id: ID! @id
  url: String!
  post: Post!
}

type ChatRoom {
  id: ID! @id
  participants: [User!]! 
  messages: [Message!]!
}

type Message {
  id: ID! @id
  text: String!
  from: User! @relation(name: "From")
  to: User! @relation(name: "To")
  chatRoom: ChatRoom!
}